<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs')%>
   <link rel="stylesheet" href="styles/new_user.css">
</head>
<body>
    <%- include('./partials/nav.ejs') %>
    <section class="hero">
        <h2 class="title">Create a User</h2>
        
    </section>
<div class="container" id="glass">
    <form class="field" method="POST" action="/user">
        <!-- Name input -->
        <label class="label" for="username">Username:</label>
        <input class="input is-normal is-rounded is-hovered" type="text" id="username" name="username" placeholder="Username"required>
        <br>
        <!-- Age input -->
        <label class="label" for="firstName">First Name:</label>
        <input class="input is-normal is-rounded is-hovered" type="text" id="firstName" name="firstName"  required>
        <br>
        <!-- Breed input -->
        <label class="label" for="lastName">Last Name:</label>
        <input class="input is-normal is-rounded is-hovered" type="text" id="lastName" name="lastName" required>
        <br>
        <!-- Species input -->
        <label class="label" for="email">Email:</label>
        <input class="input is-normal is-rounded is-hovered" type="text" id="email" name="email" required>
        <br>
        
        <label class="label" for="password">Password:</label>
        <input class="input is-normal is-rounded is-hovered" type="text" id="password" name="password" required>
        <br>
        <input type="submit" value="Create Account">
    </form>
</div>

</html>